@model BookingSystem.Models.CompletedCamp


@{
    ViewBag.Title = "Upload";
}

<br />
<h3>School Surveys Upload &amp; Extraction</h3>
<h4>PDF Upload</h4>
<br />
<h6>Accepts a .PDF upload containing all of a school camps surveys</h6>
<hr />

<br />
<div class="row">
    <div class="col-md-6 col-md-offset-4" style="justify-content:center; align-content:center">
        <div>
            <br/>
            <p>Upload Surveys for <strong>@Model.OfficialSchoolName</strong> in .PDF format</p>
            <br/>

            <form style=" width:400px" id="upload" class="btn btn-default" method="post" enctype="multipart/form-data" action="@Url.Action("Upload", "CompletedCamps")" onsubmit="document.getElementById('loading').style.display='block'">
                <div>
                    <input name="file" type="file" class="btn btn-link" required />
                    <br />
                    <button type="submit" class="btn btn-block btn-primary">Import</button>

                </div>

            </form>
        </div>
        <br />
        <br />
        <div class="col-md-6 col-md-offset-4" style="display: block; margin:auto" >
            <img style="margin-left:80px; display:none;" id="loading" src="../../Content/loading2.gif" alt="Updating ..." />
        </div>
        <br />
</div>
</div>

