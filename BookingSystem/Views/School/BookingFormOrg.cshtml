@model BookingSystem.Models.Organisation

@{
    ViewBag.Title = "Organisation Booking Form";
}

@if (Model.ValidationMsg != null)
{
    <div id="myAlert" class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        @Model.ValidationMsg
    </div>
}

<form asp-controller="School" asp-action="BookingFormOrg" method="post" >

    <br />
    <br />
    <h4 style="text-align:center;"><strong>Organisation Booking Details</strong></h4>
    <br />
    <br />

    <div class="container">
        <div class="row">
            <div class="col-md-3" style="margin-left:70px;">
                <div class="form-group">
                    <div>
                        <label for="OrgName">Organisation Name:</label>
                        <br />
                        <input asp-for="Organisation.OfficialSchoolName" id="txtName" name="OrgName" value="@Model.OfficialSchoolName" class="form-control" />
                    </div>
                    <br />
                    <div>
                        <label for="TeacherName">Contact Name:</label>
                        <br />
                        <input asp-for="Organisation.TeacherName" id="txtTeacherName" name="TeacherName" class="form-control" value="@Model.TeacherName" />
                    </div>
                    <br />
                    <div>
                        </br>
                        <label for="Email">Contact Email:</label>
                        <br />
                        <input asp-for="Organisation.Email" id="txtEmail" name="Email" class="form-control" value="@Model.Email" />
                    </div>
                    <br />
                    <div>
                        <label for="PhoneNumber">Contact Number:</label>
                        <br />
                        <input asp-for="Organisation.PhoneNumber" id="txtPhoneNumber" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" />
                    </div>
                </div>
                <br />
            </div>
            <div class="col-md-3" style="margin-left:70px;">
                <div class="form-group">
                    <div>
                        <label for="Address">Organisation Address:</label>
                        <br />
                        <input asp-for="Organisation.Address1" id="txtAddress1" name="Address1" value="@Model.Address1" class="form-control" placeholder="Address 1" />

                        <input asp-for="Organisation.Address2" id="txtAddress2" name="Address2" value="@Model.Address2" class="form-control" placeholder="Address 2" />

                        <input asp-for="Organisation.Address3" id="txtAddress3" name="Address3" value="@Model.Address3" class="form-control" placeholder="Address 3" />

                        <input asp-for="Organisation.Address4" id="txtAddress4" name="Address4" value="@Model.Address4" class="form-control" placeholder="Town/City" />
                    </div>
                    <br />
                    <div>
                        <label for="County">County:</label>
                        <br />
                        <input asp-for="Organisation.County" id="txtCounty" name="County" class="form-control" value="@Model.County" />
                    </div>
                    <br />
                    <div>
                        <label for="Eircode">Eircode:</label>
                        <br />
                        <input asp-for="Organisation.Eircode" id="txtEircode" name="Eircode" class="form-control" value="@Model.Eircode" />
                        <a href="https://finder.eircode.ie/#/" target="_blank">Find your Eircode</a>
                    </div>
                </div>
            </div>


            <div class="col-md-3" style="margin-left:70px;">
                <div class="form-group">
                    <div>
                        <label for="Date">Camp Date:</label>
                        <br />
                        <input asp-for="Organisation.Date" id="txtDate" name="Date" value="@Model.Date.Value.ToShortDateString()" disabled class="form-control" />
                    </div>
                    <br />
                    <div>
                        <label for="Times">Times Needed:</label>
                        <br />
                        <input asp-for="Organisation.StartTime" id="txtStartTime" name="StartTime" placeholder="Start Time e.g. 10:30" class="form-control" value="@Model.StartTime" />

                        <input asp-for="Organisation.EndTime" id="txtEndTime" name="EndTime" placeholder="End Time e.g. 16:00" class="form-control" value="@Model.EndTime" />
                    </div>
                    <br />
                    <div>
                        <label for="ClassGroups">Age Groups:</label>
                        <br />
                        <input asp-for="Organisation.ClassGroups" id="txtClassGroups" name="ClassGroups" placeholder="e.g. 6th class, 1st year etc." class="form-control" value="@Model.ClassGroups" />
                    </div>
                    <br />
                    <div>
                        <label for="Topics">Topics to be covered:</label>
                        <br />
                        <input asp-for="Organisation.Topics" id="txtTopics" name="Topics" class="form-control" value="@Model.Topics" />
                    </div>
                  
                </div>

            </div>


        </div>
    </div>
    <hr />
    <div class="row" style="margin-left:44px;">
        <div class="col-md-4 col-md-offset-4 form input-group">

            <br />

            <div class="input-group">
                <span class="input-group-addon">
                    <input asp-for="Booking.Surveys" type="checkbox" aria-label="..." onclick="$(this).val(this.checked ? true : false)">
                </span>
                <label style="width:350px;" class="form-control" for="Surveys">Would you like to take part in research surveys?</label>
            </div>
            <br />
            <input type="submit" value="Submit" class="btn btn-primary" />
            <input type="button" value="Cancel" class="btn btn-danger" style="margin-left: 245px;" onclick=" location.href='@Url.Action("BookingOrg","School")'" />

        </div>

    </div>
</form>





