@model BookingSystem.Models.School

@{
    ViewBag.Title = "School Booking Form";
}


@if (Model.ValidationMsg != null)
{
    <div id="myAlert" class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        @Model.ValidationMsg
    </div>
}


<form asp-controller="School" asp-action="BookingForm" method="post">

    <br />
    <br />
    <h4 style="text-align:center;"><strong>School Booking Details</strong></h4>
    <br />
    <br />


    <div class="container">
        <div class="row">
            <div class="col-md-3 " style="margin-left:70px;">


                <div class="form-group">
                    <div>
                        <label for="RollNumber">School Roll Number:</label>
                        <br />
                        <input asp-for="Booking.Rollnumber" id="txtRoll" name="RollNumber" value="@Model.RollNumber" disabled class="form-control" />
                    </div>
                    <br />
                    <div>
                        <label for="OfficialSchoolName">School Name:</label>
                        <br />
                        <input asp-for="Booking.OfficialSchoolName" id="txtOfficialSchoolName" name="OfficialSchoolName" value="@Model.OfficialSchoolName" class="form-control" />
                    </div>
                    <br />
                    <div>
                        <label for="TeacherName">Teacher Name:</label>
                        <br />
                        <input asp-for="Booking.TeacherName" id="txtTeacherName" name="TeacherName" class="form-control" value="@Model.TeacherName" />
                    </div>
                    <br />
                    <div>
                        <label for="Email">Teacher Email:</label>
                        <br />
                        <input asp-for="Booking.Email" id="txtEmail" name="Email" value="@Model.Email" class="form-control" />
                    </div>
                    <br />
                    <div>
                        <label for="PhoneNumber">Contact Number:</label>
                        <br />
                        <input asp-for="Booking.PhoneNumber" id="txtPhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
                    </div>
                </div>

                <br />
            </div>
            <div class="col-md-3" style="margin-left:70px;">

                <div class="form-group">

                    <label for="Address">School Address:</label>
                    <br />
                    <input asp-for="Booking.Address1" id="txtAddress1" name="Address1" value="@Model.Address1" class="form-control" placeholder="Address 1" />

                    <input asp-for="Booking.Address2" id="txtAddress2" name="Address2" value="@Model.Address2" class="form-control" placeholder="Address 2" />

                    <input asp-for="Booking.Address3" id="txtAddress3" name="Address3" value="@Model.Address3" class="form-control" placeholder="Address 3" />

                    <input asp-for="Booking.Address4" id="txtAddress4" name="Address4" value="@Model.Address4" class="form-control" placeholder="Town/City" />
                    <br />
                    <br/>
                    <div>
                        <label for="County">County:</label>
                        <br />
                        <input asp-for="Booking.County" id="txtCounty" name="County" class="form-control" value="@Model.County" />
                    </div>
                    <br />
                    <br />
                    <div>
                        <label for="Eircode">Eircode:</label>
                        <br />
                        <input asp-for="Booking.Eircode" id="txtEircode" name="Eircode" class="form-control" value="@Model.Eircode" />
                        <a href="https://finder.eircode.ie/#/" target="_blank">Find your Eircode</a>
                    </div>
                </div>


            </div>



            <div class="col-md-3" style="margin-left:70px;">

                <div class="form-group">
                    <div>
                        <label for="Date">Camp Date:</label>
                        <br />
                        <input asp-for="Booking.Date" id="txtDate" name="Date" value="@Model.Date.Value.ToShortDateString()" disabled class="form-control" />
                    </div>
                    <br />

                    <label for="Times">Times Required:</label>
                    <br />
                    <input asp-for="Booking.StartTime" id="txtStartTime" name="StartTime" value="@Model.StartTime" class="form-control" placeholder="Start Time e.g. 10:30" />
                    <br />
                    <input asp-for="Booking.EndTime" id="txtEndTime" name="EndTime" value="@Model.EndTime" class="form-control" placeholder="Start Time e.g. 16:00" />

                    <br />
                    <div>
                        <label for="ClassGroups">Class Groups:</label>
                        <br />
                        <input asp-for="Booking.ClassGroups" id="txtClassGroups" name="ClassGroups" value="@Model.ClassGroups" class="form-control" />
                    </div>
                    <br />
                    <div>
                        <label for="Topics">Topics to be covered:</label>
                        <br />
                        <input asp-for="Booking.Topics" id="txtTopics" name="Topics" value="@Model.Topics" class="form-control" />
                    </div>

                  
                </div>


            </div>



        </div>
    </div>
    <hr />
    <div class="row" style="margin-left:44px;">
        <div class="col-md-4 col-md-offset-4 form input-group">

            <br/>

            <div class="input-group">
                <span class="input-group-addon">
                    <input type="checkbox" aria-label="...">
                </span>
                <label style="width:350px;" class="form-control" for="Surveys">Would you like to take part in research surveys?</label>
            </div><!-- /input-group -->


            @*<div>

                <input asp-for="Booking.Surveys" id="Surveys" name="Surveys" type="checkbox" onclick="$(this).val(this.checked ? true : false)" />
                <label class="form-control" for="Surveys">Would you like to take part in research surveys?</label>
            </div>*@
            <br />
            <input type="submit" value="Submit" class="btn btn-primary" />
            <input type="button" value="Cancel" class="btn btn-danger" style="margin-left: 245px;" onclick="location.href='@Url.Action("Booking","School")'" />

        </div>
    </div>

</form>


